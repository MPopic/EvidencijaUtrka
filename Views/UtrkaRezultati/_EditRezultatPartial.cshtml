@model UtrkaRezultat


<!-- Modal -->
<div class="modal fade" id="rezultat" tabindex="-1" role="dialog" aria-labelledby="rezultatLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rezultatLabel">Rezultat</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="UtrkaRezultati" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="UtrkaRezultatID" />
                    <div class="form-group">
                        <label asp-for="Ime" class="control-label"></label>
                        <input asp-for="Ime" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Prezime" class="control-label"></label>
                        <input asp-for="Prezime" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="RezultatVrijeme" class="control-label"></label>
                        <input asp-for="RezultatVrijeme" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Sluzben" class="control-label"></label>
                        <input asp-for="Sluzben" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input hidden asp-for="UtrkaID" class="form-control" />
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Zatvori</button>
                        <input type="submit" value="Spremi" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>