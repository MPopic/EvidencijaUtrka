@model EvidencijaUtrka.Models.Utrka

@{
    ViewData["Title"] = "Details";
}

<h1>Detalji - Administracija</h1>

<!-- Modal placeholder -->
<div id="modal-placeholder"></div>

<div>
    <h4>Utrka</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duljina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duljina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Datum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Datum)
        </dd>
    </dl>
    <table class="table" border="1">
        <thead>
            <tr>
                <th>
                    Ime
                </th>
                <th>
                    Prezime
                </th>
                <th>
                    Vrijeme
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Rezultati)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prezime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RezultatVrijeme)
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary"
                                data-toggle="rezultat-modal" data-target="#edit-rezultat"
                                data-url="@Url.Action("Edit", "UtrkaRezultati", new { id = item.UtrkaRezultatID})">
                            Uredi
                        </button>
                        <a asp-action="Delete" asp-controller="UtrkaRezultati" asp-route-id="@item.UtrkaRezultatID">Obriši</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
